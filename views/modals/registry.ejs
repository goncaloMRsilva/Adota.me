<div class="modal fade" id="registryModal" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body p-5">
        <div class="text-center">
          <img src="/images/logo/logo.svg" alt="logoLogo" class="logo-dimensions">
          <h1 class="title-color">ADOTA.ME</h1>
          <p class="font-p">Criar uma conta</p>
          <div class="alert alert-danger" role="alert" id="error" style="display: none;">
          </div>
        </div>

        <form class="pt-3" name="contact-form">
          <div>
            <input type="text" class="form-control rounded-5 rdo-style" id="name" name="name" placeholder="Nome"
              required>
          </div>

          <div class="pt-3">
            <input type="email" class="form-control rounded-5 rdo-style" id="userEmail" name="email" placeholder="Email"
              required>
          </div>

          <div class="pt-3">
            <input type="email" class="form-control rounded-5 rdo-style" id="userEmailConfirm" name="email1"
              placeholder="Confirmar e-mail" required>
          </div>

          <div class="pt-3">
            <input type="password" class="form-control rounded-5 rdo-style" id="userPassword" name="password"
              placeholder="Senha" required>
          </div>

          <div class="pt-3">
            <input type="password" class="form-control rounded-5 rdo-style" id="userPasswordConfirm" name="password1"
              placeholder="Confirmar senha" required>
          </div>

          <div class="pt-3">
            <input type="number" class="form-control rounded-5 rdo-style" id="phone" name="phone" placeholder="Contacto"
              required>
          </div>

          <div class="text-center mt-4">
            <p class="font-p m-0">ou</p>
            <a data-bs-toggle="modal" data-bs-target="#loginModal" class="no-underline cursor-style">Iniciar sess√£o</a>
          </div>

          <div class="d-flex justify-content-center mt-4">
            <button type="submit" value="submit" id="btnsubmit" onclick="register()" class="btn card-button">Criar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

