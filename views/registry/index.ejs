<%- include('../partials/head', {title: 'Index registry'}) %>

  <body>
    
    <h1>ADOTA.ME</h1>
    <p>Criar uma conta</p>

    <form action="/registry" method="get">
        <div class="mb-3">
        <label for="exampleInputName" class="form-label">Nome</label>
        <input type="text" class="form-control" id="exampleInputName" aria-describedby="NameHelp" required>
        </div>
        <div class="mb-3">
        <label for="InputEmail1" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp" required>
        </div>
        <div class="mb-3">
        <label for="InputEmail2" class="form-label">Confirmar e-mail</label>
        <input type="email" class="form-control" id="InputEmail2" aria-describedby="emailHelp" required>
        </div>
        <div class="mb-3">
        <label for="InputPassword1" class="form-label">Senha</label>
        <input type="password" class="form-control" id="InputPassword1" required>
        </div>
        <div class="mb-3">
        <label for="InputPassword2" class="form-label">Confirmar senha</label>
        <input type="password" class="form-control" id="InputPassword2" required>
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
    </form>
    
    <% include ../partials/scripts %>
  </body>